{
  "manifest_version": 2,
  "name": "demo",
  "version": "1.0.1",
  "description": "测试Chrome扩展demo",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "permissions": [
    "notifications",
    "declarativeContent",
    "contextMenus",
    "https://www.baidu.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.baidu.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "page_action": {
    "default_icon": "img/icon.png",
    "default_title": "这是一个示例Chrome插件",
    "default_popup": "popup.html"
  }
}